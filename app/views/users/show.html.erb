<div class="form-inline">
<div class="mr-auto">
<h3>Profile</h3>
</div>
<div class="ml-auto">
<%= link_to 'Profile Edit', edit_user_registration_path, class:'btn btn-outline-primary' %>
</div>
</div>
<div class="row">
 <div class="col-sm-3">
  <img src="<%= @user.image.url %>" width="200px" height="200px" style="border-radius:50%">
 </div>
 <div class="col">
  <strong><%= @user.username %></strong>
  <p>
  <%= @user.profile %>
  </p>
 </div>
</div>
<div class="row mt-3">
<% @user.posts.each do |post| %>
    <div class="col-sm-4 mt-2">
     <img src="<%= post.image.url %>" width="100%" height="250px">
    </div>
    <div class="col-sm-8">
     <%= post.title %>
     <div class="text-right">
      <%= link_to 'Edit', edit_post_path(post) ,class:'btn btn-success'%>
      <%= link_to 'âœ–',post_path(post),method: :delete, data: {confirm: 'Are you sure?'},class:'btn btn-danger' %>
     </div>
    </div>
<% end %>
</div>

<h1>Posts#index</h1>
<p>Find me in app/views/posts/index.html.erb</p>

<div class="row">
 <div class="col-sm-9">
 <% @posts.each do |post| %>
    <div class="card mt-2">
     <h3 class="card-header"><%= post.title %><h3>
     <div class="card-body">
     <img src="<%= post.image.url %>" width="100%" height="auto">
     <%= post.text %>
     <%= link_to 'Read more...',post_path(post) %>
    </div>
    </div>
<% end %>
 </div>
 <div class="col">
 <ul class="list-group mt-2">
 <li class="list-group-item bg-light"><strong>Category</strong></li>
 <% @categories.each do |category| %>
        <li class="list-group-item"><%= category.name %></li>
<% end %>
</ul>
<div class="text-center mt-3">
<img src="<%= current_user.image.url %>" width="200px" height="200px" style="border-radius:50%">
<p class="mt-3">
<strong><%= current_user.username %></strong><br><%= current_user.profile %>
</p>
</div>
 </div>
</div>
